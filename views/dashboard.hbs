<header id="dashboard_header">
	<span>Dashboard</span>
	<div class="current_user right">
	  <!-- <span>SM</span> -->
	  <img src="{{user.photoUrl}}" />
	  <span>{{user.name}}</span>
	</div>
	<a class="right" id="add_habit"><i class="fa fa-plus" aria-hidden="true"></i></a>
</header>

<nav>
  <div class="nav_header"><i class="fa fa-bolt" aria-hidden="true"></i> Quirk</div>
  <div class="nav_links">

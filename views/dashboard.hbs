<div class="content" id="dashboard_content">
  <div class="add_habit_tab">
	<form method="POST" action="/addhabit">
		<ul>
			<li>
				<label for="habitName">Habit Name:</label>
				<input type="text" name="habitName" placeholder="e.g. Gym" required/>
			</li>
			<li>
				<label for="habitDesc">Habit Description:</label>
				<input type="text" name="habitDesc" placeholder="Workout for 1 hour and do 15mins cardio." />
			</li>
			<li>
				<label for="weeklyGoal">Weekly goal:</label>
				<select name="weeklyGoal">
					<option value="">Once a week</option>
					<option value="">2 times a week</option>
					<option value="">3 times a week</option>
					<option value="">4 times a week</option>
					<option value="">5 times a week</option>
					<option value="">6 times a week</option>
					<option value="">Every day</option>
				</select>
			</li>
			<li>
				<input type="submit" value="Add Habit" />
			</li>
		</ul>
	</form>
  </div>
    <div class="habits">
        <ul>
            <li>
                <div id="habit_top">
                    <h3>Habit Name</h3>
                    <badge>Edit</badge>
                    <badge>Stats</badge>
                </div>
                <div id="habit_middle">
                    <ul>
                        <li></li>
                        <li></li>
                        <li>Today</li>
                        <li></li>
                        <li></li>
                    </ul>
                </div>
                <div id="habit_bottom">

                </div>
            </li>
        </ul>
    </div>
</div>

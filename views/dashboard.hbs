      <section class="nav_section_divider">Main</section>
      <li><a href=""><i class="fa fa-home" aria-hidden="true"></i> Dashboard</a></li>
      <li><a href=""><i class="fa fa-line-chart" aria-hidden="true"></i> Statistics</a></li>
